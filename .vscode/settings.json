{
  "$schema": "vscode://schemas/settings/user",
  "github.copilot.enable": { "*": true },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "chat.agentSessionsViewLocation": "view",
  "chat.agent.maxRequests": 1000,
  "chat.math.enabled": true,
  "chat.fontSize": 14,
  "chat.editor.fontSize": 14,
  "workbench.secondarySideBar.defaultVisibility": "visible",

  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "git.blame.editorDecoration.enabled": true,

  "terminal.integrated.fontSize": 15,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.history": 500,
  "terminal.integrated.defaultProfile.windows": "PowerShell Core",
  "terminal.integrated.profiles.windows": {
    "PowerShell Core": { "source": "PowerShell", "icon": "terminal-powershell", "args": ["-NoLogo"] },
    "PowerShell": { "source": "PowerShell", "args": ["-NoLogo", "-ExecutionPolicy", "RemoteSigned"] }
  },

  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.hideUnchangedRegions.enabled": false,

  "files.encoding": "utf8",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.associations": { "*.py": "python" },
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.DS_Store": true, "**/Thumbs.db": true,
    "**/*.tmp": true, "**/*.swp": true, "**/*.swo": true,
    "**/bin": true, "**/*.exe": true, "**/*.exe~": true, "**/*.dll": true, "**/*.so": true, "**/*.dylib": true,
    "**/out": true, "**/.mvn": true, "**/.gradle": true,
    "**/go.work": true, "**/go.work.sum": true,
    "**/vendor": true, "**/node_modules": true,
    "**/.cspellcache": true, "**/.cicd": true, "**/.env": true,
    "**/*.test": true, "**/coverage": true, "**/coverage_*": true, "**/coverage*.out": true,
    "**/test-results": true, "**/orm_coverage": true, "**/*_coverage": true, "**/*_functions.txt": true,
    "**/__pycache__": true, "**/*.pyc": true, "**/*.pyo": true, "**/*.pyd": true,
    "**/.venv": true, "**/venv": true, "**/env": true, "**/ENV": true,
    "**/.tox": true, "**/.coverage": true, "**/.coverage.*": true,
    "**/.hypothesis": true, "**/.pytest_cache": true, "**/.mypy_cache": true,
    "**/.ruff_cache": true
  },
  "search.exclude": {
    "**/.git/objects/**": true, "**/.git/subtree-cache/**": true,
    "**/node_modules": true, "**/vendor": true,
    "**/out": true, "**/.mvn": true, "**/.gradle": true,
    "**/bin": true, "**/*.exe": true,
    "**/coverage": true, "**/coverage_*": true, "**/test-results": true,
    "**/__pycache__": true, "**/*.pyc": true, "**/.venv": true, "**/venv": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true, "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true, "**/vendor/**": true,
    "**/out": true, "**/.mvn/**": true, "**/.gradle/**": true,
    "**/bin/**": true, "**/test-results/**": true,
    "**/coverage": true, "**/coverage_*": true,
    "**/__pycache__/**": true, "**/.venv/**": true, "**/venv/**": true
  },

  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.openMarkdownLinks": "inPreview",
  "markdown.validate.enabled": true,
  "markdown.updateLinksOnFileMove.enabled": "prompt",
  "markdown.math.enabled": true,
  "markdown.validate.fragmentLinks.enabled": "warning",
  "markdown.validate.fileLinks.enabled": "warning",

  "yaml.schemas": {
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": ["**/*compose*.{yml,yaml}"],
    "https://json.schemastore.org/github-workflow.json": [".github/workflows/*.{yml,yaml}"],
    "https://json.schemastore.org/github-action.json": [".github/actions/**/*.{yml,yaml}", "**/action.{yml,yaml}"],
    "https://raw.githubusercontent.com/OAI/OpenAPI-Specification/main/schemas/v3.0/schema.json": ["api/openapi_spec*.{yaml,yml}"],
    "https://json.schemastore.org/pre-commit-config.json": [".pre-commit-config.yml", ".pre-commit-config.yaml"]
  },
  "yaml.validate": false,
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": true,

  "json.schemas": [
    { "fileMatch": ["go.mod"], "url": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/go-mod.json" },
    { "fileMatch": ["pyproject.toml"], "url": "https://json.schemastore.org/pyproject.toml" },
    { "fileMatch": ["package.json"], "url": "https://json.schemastore.org/package.json" },
    { "fileMatch": ["golangci.json"], "url": "https://golangci-lint.run/jsonschema/golangci.jsonschema.json" }
  ],

  "editor.aiStats.enabled": true,
  "editor.rulers": [80, 120, 160, 200],
  "editor.minimap.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.scrollback": 100000,
  "workbench.editor.empty.hint": "hidden",

  "chat.tools.terminal.autoApprove": {
    "git push": true,
    "git pull": false,
    "git reset": false,
    "git rebase": false,
    "rm ": false,
    "del ": false,
    "Remove-Item": false,
    "Invoke-WebRequest": false,
    "Invoke-RestMethod": false,
    "curl ": true,
    "wget ": true,
    "autoapprove ": true,
    "go ": true,
    "docker ": true,
    "git ": true,
    "code ": true,
    "pre-commit ": true,
    "golangci-lint ": true,
    "gofumpt ": true,
    "goimports ": true,
    "yamllint ": true,
    "cspell ": true,
    "jq ": true,
    "yq ": true,
    "act ": true,
    "netstat": true,
    "openssl ": true,
    "gradlew ": true,
    "gradle ": true,
    "mvnw ": true,
    "mvn ": true,
    "java ": true,
    "python ": true,
    "python3 ": true,
    "pip ": true,
    "pip3 ": true,
    "pytest ": true,
    "ls ": true,
    "which ": true,
    "find ": true,
    "grep ": true,
    "cat ": true,
    "head ": true,
    "tail ": true,
    "mkdir ": true,
    "dir ": true,
    "type ": true,
    "Get-ChildItem ": true,
    "Get-Content ": true,
    "Set-Content": true,
    "New-Object": true,
    "Select-Object ": true,
    "Select-String ": true,
    "Test-Path ": true,
    "Resolve-Path": true,
    "Measure-Object ": true,
    "Format-Table ": true,
    "Format-List ": true,
    "Out-String": true,
    "Get-NetTCPConnection": true,
    "ForEach-Object": true,
    "Get-Process ": true,
    "Get-Service ": true,
    "Get-Command ": true,
    "Get-Location ": true,
    "Set-Location ": true,
    "Get-Alias ": true
  },

  "python.terminal.activateEnvironment": true,
  "python.defaultInterpreterPath": "python3",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.testing.pytestArgs": ["."],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,

  "maven.terminal.useJavaHome": true,
  "java.import.maven.enabled": true,
  "java.configuration.updateBuildConfiguration": "automatic",

  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact"],
  "eslint.workingDirectories": ["."],

  "go.alternateTools": { "gopls": "gopls" },
  "go.languageServerFlags": ["-rpc.trace", "serve", "--debug=localhost:6060"],
  "go.formatTool": "gofumpt",
  "go.lintTool": "golangci-lint",
  "go.vetOnSave": "off",
  "go.lintOnSave": "file",
  "go.testOnSave": false,
  "go.coverOnSave": false,
  "go.testExplorer.enable": true,
  "go.toolsManagement.autoUpdate": true,
  "go.terminal.activateEnvironment": true,
  "gopls": {
    "ui.completion.usePlaceholders": false,
    "ui.completion.completionBudget": "200ms",
    "ui.diagnostic.analyses": { "unusedparams": true, "unusedvariables": true },
    "formatting.gofumpt": true,
    "formatting.local": "cryptoutil",
    "buildFlags": ["-tags=e2e"],
    "ui.inlayhint.hints": {
      "assignVariableTypes": true,
      "compositeLiteralFields": true,
      "compositeLiteralTypes": true,
      "constantValues": true,
      "functionTypeParameters": true,
      "parameterNames": true,
      "rangeVariableTypes": true
    }
  }
}
