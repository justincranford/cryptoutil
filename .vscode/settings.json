{
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,

  // GitHub Copilot Privacy Settings
  "github.copilot.advanced.anonymizeData": true,
  "github.copilot.advanced.shareMetadata": false,
  "github.copilot.advanced.telemetry": "off",
  "github.copilot.advanced.listCount": 3,

  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.openMarkdownLinks": "inPreview",
  "files.encoding": "utf8",

  "chat.tools.terminal.autoApprove": {
    "/^go (test|run|build|mod|generate)/": true,
    "/^docker compose (up|down|logs|ps)/": true,
    "/^git (status|log|diff|branch)/": true,
    "/^Remove-Item\\b/i": false,
    "/\\.ps1\\b/i": { "approve": false, "matchCommandLine": true }
  },
  "github.copilot.chat.virtualTools.threshold": 64,
  "editor.aiStats.enabled": true,
  "chat.math.enabled": true,
  "chat.todoListTool.enabled": true,

  // Go Language Server and Development Settings
  "go.useLanguageServer": true,
  // Ensure VS Code uses gopls explicitly (helps when multiple Go toolchains are present)
  "go.alternateTools": {
    "gopls": "gopls"
  },
  "go.languageServerFlags": [
    "-rpc.trace",
    "serve",
    "--debug=localhost:6060"
  ],
  "go.formatTool": "gofumpt",
  "go.lintTool": "golangci-lint",
  "go.vetOnSave": "package",
  "go.formatOnSave": true,
  "go.lintOnSave": "package",
  "go.testOnSave": false,
  "go.coverOnSave": false,
  "go.gocodeAutoBuild": false,
  "go.useCodeSnippetsOnFunctionSuggest": true,
  "go.formatOnType": true,
  "go.suggest.snippets": true,
  "go.useCodeSnippetsOnFunctionSuggestWithoutType": true,

  // Go Language Server (gopls) Configuration
  "gopls": {
    "ui.completion.usePlaceholders": false,
    "ui.completion.completionBudget": "100ms",
    "ui.diagnostic.analyses": {
      "unusedparams": true,
      "unusedvariables": true
    },
    "formatting.gofumpt": true,
    "formatting.local": "cryptoutil",
    "ui.inlayhint.hints": {
      "assignVariableTypes": true,
      "compositeLiteralFields": true,
      "compositeLiteralTypes": true,
      "constantValues": true,
      "functionTypeParameters": true,
      "parameterNames": true,
      "rangeVariableTypes": true
    }
  }
}
