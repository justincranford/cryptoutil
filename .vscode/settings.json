{
  // Copilot instruction settings
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.codeGeneration.instructionsFiles": [
    ".github/copilot-instructions.md",
    ".github/instructions/crypto.instructions.md",
    ".github/instructions/testing.instructions.md",
    ".github/instructions/errors.instructions.md",
    ".github/instructions/formatting.instructions.md",
    ".github/instructions/docker.instructions.md",
    ".github/instructions/database.instructions.md",
    ".github/instructions/openapi.instructions.md",
    ".github/instructions/security.instructions.md",
    ".github/instructions/observability.instructions.md",
    ".github/instructions/architecture.instructions.md"
  ],
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.openMarkdownLinks": "inPreview",
  "files.encoding": "utf8",
  
  "chat.tools.terminal.autoApprove": {
    "/^go (test|run|build|mod|generate)/": true,
    "/^docker compose (up|down|logs|ps)/": true,
    "/^git (status|log|diff|branch)/": true,
    "/^Remove-Item\\b/i": false,
    "/\\.ps1\\b/i": { "approve": false, "matchCommandLine": true }
  },
  "github.copilot.chat.virtualTools.threshold": 64,
  "editor.aiStats.enabled": true,
  "chat.math.enabled": true,
  "chat.todoListTool.enabled": true
}
