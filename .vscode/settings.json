  "markdown.validate.fileLinks.enabled": "warning", // Validate file links in markdown - Default: "ignore", Recommended: "warning"

  // YAML Schema Validation https://code.visualstudio.com/docs/languages/yaml
  "yaml.schemas": {
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [ "**/*compose*.{yml,yaml}" ],
    "https://json.schemastore.org/github-workflow.json": [ ".github/workflows/*.{yml,yaml}" ],
    "https://json.schemastore.org/github-action.json": [ ".github/actions/**/*.{yml,yaml}", "**/action.{yml,yaml}" ],
    "https://raw.githubusercontent.com/OAI/OpenAPI-Specification/main/schemas/v3.0/schema.json": [ "api/openapi_spec*.{yaml,yml}" ],
    "https://json.schemastore.org/kustomization.json": [ "**/kustomization.{yaml,yml}"],
    "https://json.schemastore.org/helmfile.json": [ "**/helmfile.{yaml,yml}" ],
    "https://json.schemastore.org/pre-commit-config.json": [ ".pre-commit-config.yml", ".pre-commit-config.yaml" ],
    "https://json.schemastore.org/prometheus.json": [ "prometheus.yml" ]
  },
  "yaml.validate": false, // Disable YAML validation - Requirements.yml doesn't have a schema
  "yaml.format.enable": true, // Enable YAML formatting - Default: true
  "yaml.format.singleQuote": false, // Use double quotes in YAML - Default: false
  "yaml.format.bracketSpacing": true, // Add spaces inside brackets - Default: true
  "yaml.format.proseWrap": "preserve", // Preserve prose wrapping - Default: "preserve"

  // JSON Schema Validation https://code.visualstudio.com/docs/languages/json
  "json.schemas": [
    { "fileMatch": ["go.mod"], "url": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/go-mod.json" },
    { "fileMatch": ["Dockerfile*"], "url": "https://raw.githubusercontent.com/moby/buildkit/master/frontend/dockerfile/cmd/dockerfile-parser/schema.json" },
    { "fileMatch": ["docker-compose*.json"], "url": "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json" },
    { "fileMatch": ["package.json"], "url": "https://json.schemastore.org/package.json" },
    { "fileMatch": ["tsconfig*.json"], "url": "https://json.schemastore.org/tsconfig.json" },
    { "fileMatch": ["jsconfig*.json"], "url": "https://json.schemastore.org/jsconfig.json" },
    { "fileMatch": [".eslintrc.json", ".eslintrc"], "url": "https://json.schemastore.org/eslintrc.json" },
    { "fileMatch": ["renovate.json", "renovate.json5"], "url": "https://docs.renovatebot.com/renovate-schema.json" },
