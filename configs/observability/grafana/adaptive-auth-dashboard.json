{
  "dashboard": {
    "title": "Adaptive Authentication - Risk & Step-Up Monitoring",
    "tags": ["identity", "adaptive-auth", "risk-scoring", "step-up"],
    "timezone": "utc",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Risk Score Distribution",
        "type": "histogram",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(identity_risk_score_bucket[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(identity_risk_score_bucket[5m])) by (le))",
            "legendFormat": "p90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(identity_risk_score_bucket[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(identity_risk_score_bucket[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "D"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.2, "color": "yellow"},
                {"value": 0.5, "color": "orange"},
                {"value": 0.8, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Risk Level Breakdown (Last 5m)",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(identity_risk_level_total[5m])) by (risk_level)",
            "legendFormat": "{{risk_level}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]},
          "pieType": "pie",
          "tooltip": {"mode": "single"}
        },
        "fieldConfig": {
          "overrides": [
            {"matcher": {"id": "byName", "options": "low"}, "properties": [{"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}]},
            {"matcher": {"id": "byName", "options": "medium"}, "properties": [{"id": "color", "value": {"fixedColor": "yellow", "mode": "fixed"}}]},
            {"matcher": {"id": "byName", "options": "high"}, "properties": [{"id": "color", "value": {"fixedColor": "orange", "mode": "fixed"}}]},
            {"matcher": {"id": "byName", "options": "critical"}, "properties": [{"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}]}
          ]
        }
      },
      {
        "id": 3,
        "title": "Confidence Scores Over Time",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(identity_risk_confidence_bucket[5m])) by (le))",
            "legendFormat": "p50 Confidence",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(identity_risk_confidence_bucket[5m])) by (le))",
            "legendFormat": "p90 Confidence",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(identity_risk_confidence_bucket[5m])) by (le))",
            "legendFormat": "p95 Confidence",
            "refId": "C"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom"},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.3, "color": "yellow"},
                {"value": 0.7, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Step-Up Trigger Rate by Operation",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(identity_stepup_triggered_total[5m])) by (operation)",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "mean", "max"]},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.15, "color": "yellow"},
                {"value": 0.30, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Step-Up Success vs Failure Rates",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(identity_stepup_success_total[5m])) by (method)",
            "legendFormat": "Success - {{method}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(identity_stepup_failure_total[5m])) by (method)",
            "legendFormat": "Failure - {{method}}",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "values": ["value", "mean", "max"]},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": "/Failure.*/"},
              "properties": [{"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}]
            },
            {
              "matcher": {"id": "byRegexp", "options": "/Success.*/"},
              "properties": [{"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Blocked vs Allowed Operations",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(identity_operations_blocked_total[5m])) by (operation, risk_level)",
            "legendFormat": "Blocked - {{operation}} ({{risk_level}})",
            "refId": "A"
          },
          {
            "expr": "sum(rate(identity_operations_allowed_total[5m])) by (operation, risk_level)",
            "legendFormat": "Allowed - {{operation}} ({{risk_level}})",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "mean", "max"]},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": "/Blocked.*/"},
              "properties": [{"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}]
            },
            {
              "matcher": {"id": "byRegexp", "options": "/Allowed.*/"},
              "properties": [{"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}]
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "Policy Evaluation Latency (p95, p99)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(identity_policy_evaluation_duration_bucket[5m])) by (le, operation))",
            "legendFormat": "p95 - {{operation}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(identity_policy_evaluation_duration_bucket[5m])) by (le, operation))",
            "legendFormat": "p99 - {{operation}}",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "values": ["value", "mean", "max"]},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Policy Load Duration & Errors",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(identity_policy_load_duration_bucket{success=\"true\"}[5m])) by (le, policy_type))",
            "legendFormat": "p95 Load - {{policy_type}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(identity_policy_load_errors_total[5m])) by (policy_type)",
            "legendFormat": "Errors - {{policy_type}}",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "values": ["value", "mean", "max"]},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": "/Errors.*/"},
              "properties": [
                {"id": "unit", "value": "reqps"},
                {"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}
              ]
            }
          ]
        }
      },
      {
        "id": 9,
        "title": "Step-Up Methods Distribution",
        "type": "bargauge",
        "gridPos": {"x": 0, "y": 32, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(identity_stepup_method_total[1h])) by (method)",
            "legendFormat": "{{method}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "orange"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Risk Assessment Error Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 32, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(identity_risk_assessment_errors_total[5m])) by (error_type)",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "mean", "max"]},
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.05, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Policy Reload Activity",
        "type": "stat",
        "gridPos": {"x": 0, "y": 40, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(identity_policy_reload_total[1h])) by (policy_type)",
            "legendFormat": "{{policy_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 20, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Current Step-Up Rate",
        "type": "gauge",
        "gridPos": {"x": 8, "y": 40, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(identity_stepup_triggered_total[5m])) / (sum(rate(identity_operations_blocked_total[5m])) + sum(rate(identity_operations_allowed_total[5m])))",
            "legendFormat": "Step-Up Rate",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.15, "color": "yellow"},
                {"value": 0.30, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Current Blocked Operation Rate",
        "type": "gauge",
        "gridPos": {"x": 16, "y": 40, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(identity_operations_blocked_total[5m])) / (sum(rate(identity_operations_blocked_total[5m])) + sum(rate(identity_operations_allowed_total[5m])))",
            "legendFormat": "Blocked Rate",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.05, "color": "yellow"},
                {"value": 0.10, "color": "red"}
              ]
            }
          }
        }
      }
    ],
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s"
  }
}
